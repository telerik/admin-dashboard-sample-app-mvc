<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @* Add the Kendo UI styles: *@
    <link href="https://kendo.cdn.telerik.com/themes/11.0.2/default/default-main.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet">
    @{
        var fontIconsUrl = "https://unpkg.com/@progress/kendo-font-icons/dist/index.css";
    }

    <link rel="stylesheet" href="@fontIconsUrl" />

    @* Add the Kendo UI scripts: *@
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2025.2.520/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2025.2.520/js/kendo.aspnetmvc.min.js"></script>
    <script src="https://unpkg.com/jszip/dist/jszip.min.js"></script>
</head>
<body>
    <div class="body-content">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
